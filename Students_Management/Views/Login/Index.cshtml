@model LoginVM
<form asp-action="index" method="post">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong bg-white text-black" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <h3 class="mb-4 text-lg-center">Sign in</h3>
                        <div class="form-floating mb-4" style="border-radius: 10px;">
                            <input asp-for="Email" class="form-control bg-light border-black" style="border-radius: 10px;" placeholder="name@example.com">
                            <label asp-for="Email" class="text-black" style=""></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4" style="border-radius: 10px;">
                            <input asp-for="Password" type="password" class="form-control bg-light border-black" style="border-radius: 10px;" placeholder="Enter Password">
                            <label asp-for="Password" class="text-black" style="border-radius: 10px;"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <p class="text-danger">@ViewBag.error</p>

                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-success btn-lg text-white" style="border-radius: 20px;">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}