@{
}
@model CourseVM
<form class="row g-3" asp-action="Create" method="post">
    <div class="col-12">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="InstructorID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="InstructorID">
                @foreach (User Instructor in Model.instructors)
                {
                    <option value="@Instructor.ID">@Instructor.Name (@Instructor.Department.Title)</option>
                }
            </select>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="Hours" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Hours" class="form-control">
            <span class="text-danger" asp-validation-for="Hours"></span>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="Year" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="Year">
                <option value="1">First Year</option>
                <option value="2">Second Year</option>
                <option value="3">Third Year</option>
                <option value="4">Fourth Year</option>
            </select>
        </div>
    </div>

    <div class="col-12">
        <label asp-for="Semester" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="Semester">
                <option value="1">First</option>
                <option value="2">Second</option>
            </select>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="DepartmentID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="DepartmentID">
                @foreach (Department Department in Model.departments)
                {
                    <option value="@Department.ID">@Department.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-outline-primary">Submit</button>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}