@{
    int x = 1;

}
@model List<Department>
<a class="btn btn-primary" asp-action="Create">Add New Department</a>
@* @if (Context.Session.GetInt32("UserId") is not null)
{
    <a class="btn btn-primary" href="/Post/Add">Add New Post</a>
} *@
@if (TempData["Alert"] is not null)
{
    <div class="alert alert-success">
        <strong>Success! </strong>@TempData["Alert"]
    </div>
}
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Title</th>
            <th>Head</th>
            <th>Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Department department in Model)
        {
            <tr>
                <th>@(x++)</th>
                <td>@department.Name</td>
                <td>@department.Title</td>
                <td>@department.Head</td>
                <td>
                    <a href="/Department/Edit/@department.ID">Edit</a> |
                    <a href="/Department/Delete/@department.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
