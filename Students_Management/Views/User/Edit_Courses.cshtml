@{
}
@model Student_Course
<form action="/User/Edit_Courses" method="post">
    <div class="hidden">
        <label asp-for="UserId" class="visually-hidden"></label>
        <div class="visually-hidden">
            <input asp-for="UserId" class="form-control" value="@Model.UserId">
        </div>
    </div>
    <div class="hidden">
        <label asp-for="CourseId" class="visually-hidden"></label>
        <div class="visually-hidden">
            <input asp-for="CourseId" class="form-control" value="@Model.CourseId">
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="grade" class="col-form-label">@Model.User.Name</label>
        <div class="col-sm-10">
            <input asp-for="grade" class="form-control" value="grade">
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Edit</button>
</form>