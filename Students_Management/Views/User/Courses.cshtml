@{
    int x = 1;
}
@model List<Student_Course>
<form>
    <table class="table table-hover table-striped">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Grade/60</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student_Course course in Model)
            {
                <tr>
                    <th>@(x++)</th>
                    <td>@course.User.Name</td>
                    <td>@course.User.Email</td>
                    <td>@course.grade</td>
                    <td>
                        <a href="/User/Edit_Courses/@course.UserId/@course.CourseId"><i class="bi bi-pencil-fill link-success me-2"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/User/Instructor_Details/@Model[0].Course.InstructorID" class="btn btn-outline-info mb-2">Back</a>
</form>