@model UserVM
<form class="row g-3" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <label asp-for="FName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="FName" class="form-control">
                <span class="text-danger" asp-validation-for="FName"></span>
            </div>
        </div>
        <div class="col-md-6">
            <label asp-for="LName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="LName" class="form-control">
                <span class="text-danger" asp-validation-for="LName"></span>
            </div>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateOfBirth" class="form-control">
            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
        </div>
    </div>
    
    <div class="col-12">
        <label asp-for="DepartmentID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="DepartmentID">
                @foreach (Department Department in Model.departments)
                {
                    <option value="@Department.ID">@Department.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="Gender" class="col-sm-2 col-form-label">Gender</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" id="male" value="Male">
            <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" id="female" value="Female">
            <label class="form-check-label" for="female">Female</label>
        </div>
    </div>
    <div class="col-12">
        <label asp-for="Role" class="col-sm-2 col-form-label">Role</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Role" id="Student" value="1" onclick="toggleYearSemester()">
            <label class="form-check-label" for="Student">Student</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Role" id="Instructor" value="2" onclick="toggleYearSemester()">
            <label class="form-check-label" for="Instructor">Instructor</label>
        </div>
    </div>

    <div id="studentFields" class="d-none">
        <div class="col-12">
            <label asp-for="Year" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select class="form-select" asp-for="Year">
                    <option value="1">First Year</option>
                    <option value="2">Second Year</option>
                    <option value="3">Third Year</option>
                    <option value="4">Fourth Year</option>
                </select>
            </div>
        </div>

        <div class="col-12">
            <label asp-for="Semester" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select class="form-select" asp-for="Semester">
                    <option value="1">First</option>
                    <option value="2">Second</option>
                </select>
            </div>
        </div>
    </div>


    <div class="col-12">
        <button type="submit" class="btn btn-outline-primary">Submit</button>
    </div>
</form>
<script>
    function toggleYearSemester() {
        // Get the selected role value
        const studentRadio = document.getElementById('Student');
        const studentFields = document.getElementById('studentFields');

        // Show Year and Semester if Student is selected
        if (studentRadio.checked) {
            studentFields.classList.remove('d-none');
        } else {
            studentFields.classList.add('d-none');
        }
    }

    // Ensure proper visibility if the page is reloaded
    window.onload = function () {
        toggleYearSemester();
    };
</script>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}